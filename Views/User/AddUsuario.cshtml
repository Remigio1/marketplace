@model Cliente

@{
    ViewData["Title"] = "Cadastro de usuário";
}

<center>
    <h1>Cadastro de usuário</h1>

    <form>
        <table class="tabela">

            <tr>
                <td align="right">Nome completo</td>
                @* @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" }) *@
                <td colspan="3">
                    @* <input type="text" size="60" /> *@
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>

            <tr>
                @*  <td align="right">Usuário</td>
                <td>
                <input type="text" size="30" />
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                </td> *@
                @*  <td align="left">Telefone</td>
                <td align="left">
                <input type="text" size="10" />
                </td> *@
            </tr>

            <tr>
                <td align="right">Rua</td>
                <td>
                    @* <input type="text" size="30" /> *@
                    @Html.EditorFor(model => model.Endereco.Rua, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td align="right">Número</td>
                <td>
                    @* <input type="text" size="10" /> *@
                    @Html.EditorFor(model => model.Endereco.Numero, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>

            <tr>
                <td align="right">Bairro</td>
                <td>
                    @* <input type="text" size="30" /> *@
                    @Html.EditorFor(model => model.Endereco.Bairro, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td align="right">CEP</td>
                <td>
                    @* <input type="text" size="10" /> *@
                    @Html.EditorFor(model => model.Endereco.Cep, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>

            <tr>
                <td align="right">Email</td>
                <td>
                    @* <input type="text" size="30" /> *@
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td align="right">Senha</td>
                <td>
                    @* <input type="text" size="10" /> *@
                    @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>

            <tr>
                <td colspan="4" align="center"><button type="submit" class="btn btn-primary" />Cadastrar</td>
            </tr>
        </table>

    </form>
</center>
