            <td><input type="text" size="30" /></td>
            <td align="right">Senha</td>
            <td><input type="text" size="10"/></td>
        </tr>
        <tr>
            <td colspan="3" align="right">Repetir senha</td>
            <td><input type="text" size="10" /></td>
        </tr>
        <tr>
                <td colspan="4" align="center"><button type="submit" class="btn btn-primary"/>Cadastrar</td>
            </tr>
    </table>
       
